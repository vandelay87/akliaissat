root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
quote_type = single

[./node_modules]
indent_style = none
indent_size = none
end_of_line = none
trim_trailing_whitespace = none
insert_final_newline = none

[*.md]
trim_trailing_whitespace = false
